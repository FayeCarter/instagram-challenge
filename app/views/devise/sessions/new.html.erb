<span class="form">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :username, class:"label" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"field"%>
    </div>

    <div class="field">
      <%= f.label :password, class:"label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</span>
